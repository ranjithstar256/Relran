<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:padding="10dp"
    android:elevation="20dp"
    android:background="#E4E9D7"
    tools:context=".SelectUser">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="@color/green_400"
            app:srcCompat="@drawable/ic_person" />

        <Button
            android:id="@+id/textView"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_rounded_gre"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_height="wrap_content"
            android:text="Sign Up for EV USERS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l2"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/green_400"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:tint="#fff"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_ev_station" />

        <Button
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/btn_rounded_greee"
            android:padding="10dp"
            android:gravity="center"
            android:text="Sign Up for \nEV Charging Stations"
            android:textColor="@color/green_400"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>